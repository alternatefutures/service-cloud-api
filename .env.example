# Database
DATABASE_URL="postgresql://user:password@localhost:5432/alternatefutures?schema=public"

# Redis (Required for usage buffering - 97% cost reduction)
REDIS_URL="redis://localhost:6379"

# Server
PORT=4000
NODE_ENV=development

# Auth
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY="7d"

# IPFS - Self-Hosted (Primary - comment out to use Pinata fallback)
IPFS_API_URL="http://localhost:5001"
IPFS_GATEWAY_URL="https://ipfs.alternatefutures.ai"

# IPFS - Pinata (Fallback - only used if IPFS_API_URL is not set)
PINATA_API_KEY="your-pinata-api-key"
PINATA_API_SECRET="your-pinata-api-secret"

# Arweave Storage
TURBO_WALLET_KEY="your-arweave-turbo-wallet-key"

# Filecoin Storage
LIGHTHOUSE_API_KEY="your-lighthouse-api-key"

# Storage API (Legacy)
IPFS_STORAGE_API_URL="https://storage.alternatefutures.ai"
UPLOAD_PROXY_API_URL="https://uploads.alternatefutures.ai"

# Frontend
APP_URL="https://app.alternatefutures.ai"
