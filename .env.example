# Database (YugabyteDB is PostgreSQL-compatible)
DATABASE_URL="postgresql://user:password@localhost:5432/alternatefutures?schema=public"

# Server
PORT=4000
NODE_ENV=development

# Auth
# IMPORTANT: JWT_SECRET must be identical in both backend and auth service
# The backend uses this to generate service-to-service JWT tokens
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY="7d"

# Auth Service (REQUIRED for PAT authentication)
# Backend generates JWT tokens to authenticate with the auth service
AUTH_SERVICE_URL="http://localhost:3001"  # Development
# AUTH_SERVICE_URL="https://auth.alternatefutures.ai"  # Production

# IPFS - Self-Hosted
IPFS_API_URL="http://localhost:5001"
IPFS_GATEWAY_URL="https://ipfs.alternatefutures.ai"

# Arweave Storage
TURBO_WALLET_KEY="your-arweave-turbo-wallet-key"

# Filecoin Storage
LIGHTHOUSE_API_KEY="your-lighthouse-api-key"

# Storage API (Legacy)
IPFS_STORAGE_API_URL="https://storage.alternatefutures.ai"
UPLOAD_PROXY_API_URL="https://uploads.alternatefutures.ai"

# Frontend
APP_URL="https://app.alternatefutures.ai"
